<Window x:Class="WpfApp2.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="ColorPickerWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="749*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Wybierz kolor" Grid.Column="1" HorizontalAlignment="Left" Margin="5,10,5,10" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="tbr" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top"
                 Margin="5,10,5,10" Text="0" FontSize="20" TextWrapping="Wrap"></TextBox>
        <TextBox x:Name="tbg" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top"
         Margin="5,60,5,10" Text="0" FontSize="20" TextWrapping="Wrap"></TextBox>
        <TextBox x:Name="tbb" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top"
         Margin="5,110,5,10" Text="0" FontSize="20" TextWrapping="Wrap"></TextBox>
    </Grid>
</Window>
